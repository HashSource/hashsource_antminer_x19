# Minimal Busybox config for XILINX X19
CONFIG_DESKTOP=n
CONFIG_EXTRA_COMPAT=n
CONFIG_FEATURE_ASSUME_UNICODE=y
CONFIG_UNICODE_SUPPORT=y
CONFIG_UNICODE_USING_LOCALE=n

# Essential applets only
CONFIG_FEATURE_DEVPTS=y
CONFIG_FEATURE_SYSLOG=y

# Init system
CONFIG_INIT=y
CONFIG_FEATURE_USE_INITTAB=y
CONFIG_FEATURE_KILL_REMOVED=y
CONFIG_FEATURE_KILL_DELAY=0
CONFIG_FEATURE_INIT_SCTTY=y
CONFIG_FEATURE_INIT_SYSLOG=y
CONFIG_FEATURE_INIT_QUIET=n
CONFIG_HALT=y
CONFIG_POWEROFF=y
CONFIG_REBOOT=y

# Shell
CONFIG_ASH=y
CONFIG_ASH_OPTIMIZE_FOR_SIZE=y
CONFIG_ASH_BUILTIN_ECHO=y
CONFIG_ASH_BUILTIN_TEST=y
CONFIG_ASH_CMDCMD=y

# Bash compatibility features
CONFIG_ASH_BASH_COMPAT=y
CONFIG_ASH_JOB_CONTROL=y
CONFIG_ASH_ALIAS=y
CONFIG_ASH_EXPAND_PRMT=y
CONFIG_ASH_BASH_SOURCE_CURDIR=y
CONFIG_ASH_BASH_NOT_FOUND_HOOK=y
CONFIG_ASH_GETOPTS=y
CONFIG_ASH_INTERNAL_GLOB=y
CONFIG_ASH_RANDOM_SUPPORT=y
CONFIG_ASH_HELP=y

# Enhanced shell features
CONFIG_ASH_BUILTIN_PRINTF=y
CONFIG_ASH_MAIL=y
CONFIG_ASH_READ_NCHARS=y
CONFIG_ASH_READ_TIMEOUT=y
CONFIG_ASH_IDLE_TIMEOUT=n
CONFIG_ASH_HISTFILE=y
CONFIG_ASH_BUILTIN_SET=y

# Networking
CONFIG_IFCONFIG=y
CONFIG_ROUTE=y
CONFIG_PING=y
CONFIG_PING6=n
CONFIG_WGET=y
CONFIG_FEATURE_WGET_LONG_OPTIONS=y

# File utilities
CONFIG_CP=y
CONFIG_MV=y
CONFIG_RM=y
CONFIG_LS=y
CONFIG_MKDIR=y
CONFIG_MOUNT=y
CONFIG_UMOUNT=y
CONFIG_FEATURE_MOUNT_LOOP=y

# System utilities
CONFIG_DMESG=y
CONFIG_PS=y
CONFIG_TOP=y
CONFIG_FREE=y
CONFIG_KILL=y
CONFIG_KILLALL=y
CONFIG_LSMOD=y
CONFIG_INSMOD=y
CONFIG_RMMOD=y
CONFIG_MODPROBE=y

# Minimal set - disable unnecessary features
CONFIG_FEATURE_VI_COLON=n
CONFIG_FEATURE_VI_YANKMARK=n
CONFIG_FEATURE_VI_SEARCH=n
CONFIG_LESS=n
CONFIG_NANO=n
